<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>8.0.4</Version>
    <LangVersion>latestmajor</LangVersion>
    <Nullable>disable</Nullable>
    <TargetFramework>net8.0</TargetFramework>
    <Bumper>1</Bumper>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyTitle>Firebend Jobba Core</AssemblyTitle>
    <Description>Firebend Jobba</Description>
    <PackageTags>firebend;Jobba;job;scheduling;durable;background;jobs</PackageTags>
    <Authors>Firebend</Authors>
    <RepositoryUrl>https://github.com/firebend/Jobba</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/firebend/Jobba/blob/main/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/firebend/Jobba</PackageProjectUrl>
    <PackageIconUrl>https://github.com/firebend/Jobba/blob/main/nuget-image.png?raw=true</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AsyncKeyedLock" Version="7.1.6" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.7" />
  </ItemGroup>


</Project>
